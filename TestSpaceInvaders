import os
os.environ['CUDA_VISIBLE_DEVICES'] = '-1'
os.environ['TF_CPP_MIN_LOG_LEVEL'] = '3' 
import random
import gym
import numpy as np
from collections import deque
from tensorflow.python.keras.models import Sequential, load_model
from tensorflow.python.keras.layers import Dense, Convolution2D, Flatten
from tensorflow.python.keras.optimizer_v2.adam import Adam

# This is where the model will be saved.
# Change path if necessary.

MODEL_PATH = './SpaceInvadersModel.h5'

# This is where our main model is. We are
# using a Sequential model and 4 dense layers
# to train, and then we compile in order
# to be able to play it, or train it using fit()

def OurModel(input_shape, action_space):
    env = gym.make('SpaceInvaders-v0')
    input_shape = env.observation_space.shape
    action_space = env.action_space.n

    model = Sequential()
    model.add(Convolution2D(32, (8,8), strides=(4,4), activation='relu', input_shape=input_shape))
    model.add(Convolution2D(64, (4,4), strides=(2,2), activation='relu'))
    model.add(Convolution2D(64, (3,3), activation='relu'))
    model.add(Flatten())
    model.add(Dense(512, activation='relu'))
    model.add(Dense(256, activation='relu'))
    model.add(Dense(action_space, activation='linear'))
    model.compile(loss = 'mse',optimizer=Adam(learning_rate=0.00025,  epsilon=0.01), metrics=["accuracy"])
    model.summary()
    return model

class DQNAgent():
    def __init__(self, **kwargs):
        self.env = gym.make('SpaceInvaders-v0')
        self.input_shape = self.env.observation_space.shape
        self.action_space = self.env.action_space.n
        self.EPISODES = 10000000
        self.memory = deque(maxlen=2000)

        self.gamma = 0.95
        self.epsilon = 1.0
        self.epsilon_min = 0.001
        self.epsilon_decay = 0.999
        self.batch_size = 128
        self.train_start = 1000

        self.model = OurModel(input_shape=(self.input_shape,), action_space = self.action_space)

    # In order to train, our model needs
    # to remember what it did and what to do
    # or not to do. It does that here.
    def remember(self, state, action, reward, next_state, done):
        self.memory.append((state, action, reward, next_state, done))
        if len(self.memory) > self.train_start:
            if self.epsilon > self.epsilon_min:
                self.epsilon *= self.epsilon_decay

    def act(self, state):
        if np.random.random() <= self.epsilon:
            return random.randrange(self.action_space)
        else:
            return np.argmax(self.model.predict(state))

    def replay(self):
        if len(self.memory) < self.train_start:
            return
        # Randomly sample minibatch from the memory
        minibatch = random.sample(self.memory, min(len(self.memory), self.batch_size))

        state = np.zeros((self.batch_size, 210, 160, 3))
        next_state = np.zeros((self.batch_size, 210, 160, 3))
        action, reward, done = [], [], []

        # do this before prediction
        # for speedup, this could be done on the tensor level
        # but easier to understand using a loop
        for i in range(self.batch_size):
            state[i] = minibatch[i][0]
            action.append(minibatch[i][1])
            reward.append(minibatch[i][2])
            next_state[i] = minibatch[i][3]
            done.append(minibatch[i][4])

        # do batch prediction to save speed
        target = self.model.predict(state)
        target_next = self.model.predict(next_state)

        for i in range(self.batch_size):
            # correction on the Q value for the action used
            if done[i]:
                target[i][action[i]] = reward[i]
            else:
                # Standard - DQN
                # DQN chooses the max Q value among next actions
                # selection and evaluation of action is on the target Q Network
                # Q_max = max_a' Q_target(s', a')
                target[i][action[i]] = reward[i] + self.gamma * (np.amax(target_next[i]))

        self.new_model = load_model('./SpaceInvadersModel1.h5') #not necessary if starting training
        self.new_model.evaluate(state, target)
        self.new_model.fit(state, target, batch_size=self.batch_size, epochs = 10, verbose=1)

    # Saves the model depending on a given name
    
    def save(self, name):
        self.model.save(name)

    # Trains the model, saving every iteration.
    # Also prints out a counting average, which
    # optimally should increase over time to 
    # see if it is actually training
    
    # Note: Episode starts at 0
    
    def train(self):
        total = 0
        start = 0
        for e in range(self.EPISODES):
            state = self.env.reset()
            state = np.reshape(state, [1, 210, 160, 3])
            done = False
            score = 0
            while not done:
                action = self.env.action_space.sample()
                next_state, reward, done, _ = self.env.step(action)
                next_state = np.reshape(next_state, [1, 210, 160, 3])
                score += reward
                self.remember(state, action, reward, next_state, done)
                state = next_state
                if done:
                    start += 1
                    total += score
                    average = total/start
                    print("Episode: {}/{}, Score: {}, Epsilon: {:.3f}, Counting Average: {:.2f}".format(e, self.EPISODES, score, self.epsilon, average))
                    self.model.save(MODEL_PATH)
                    break
            self.replay()
        
    # Tests a model for 10 episodes
    # loads in model using load_model, 
    # then plays, and when finished, 
    # it prints the average score.    
    
    def test(self):
        self.model.load_weights('./BasicModel.h5')
        print('Loaded model successfully')
        total = 0
        for e in range(100):
            state = self.env.reset()
            state = np.reshape(state, [210, 160, 3])
            done = False
            score = 0
            while not done:
                action = self.act(state)
                next_state, reward, done, _ = self.env.step(action)
                next_state = np.reshape(next_state, [210, 160, 3])
                score += reward
                if done:
                    print("Episode: {}/{}, Score: {}".format(e, 100, score))
                    total += score
        print("Average score: ",total/100)

# This runs either of the functions or both
# in order to train or test a model.
if __name__ == "__main__":
    agent = DQNAgent()
    agent.train()
    #agent.test()
